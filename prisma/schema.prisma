// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Games Models
model Game {
  id   Int    @id
  name String
  slug String
}

model GameLanguage {
  id          Int    @id
  name        String
  native_name String
  locale      String
  updated_at  Int
  checksum    String @unique
}

model GameEngine {
  id         Int    @id
  name       String
  slug       String
  updated_at Int
  checksum   String @unique
}

model GameRegion {
  id         Int    @id
  name       String
  identifier String
  category   String
  updated_at Int
  checksum   String @unique
}

model GameGenre {
  id         Int    @id
  name       String
  slug       String
  updated_at Int
  checksum   String @unique
}

model GamePlayerPerspective {
  id         Int    @id
  name       String
  slug       String
  updated_at Int
  checksum   String @unique
}

model GameReleaseDateStatus {
  id          Int    @id
  name        String
  description String
  updated_at  Int
  checksum    String @unique
}
