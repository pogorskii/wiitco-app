model GameAgeRatingContentDescription {
  id          Int    @id
  category    Int
  description String
  checksum    String @unique
}

model GameLanguage {
  id          Int    @id
  name        String
  native_name String
  locale      String
  updated_at  Int
  checksum    String @unique
}
